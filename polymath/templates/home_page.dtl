<div class="featured">
	<div class="container_12">
	
		<div class="grid_6">
			<h3 id="title">Featured courses</h3>
		</div>
		
		<div class="clear"></div>
		
		<div class="grid_4">

			<div class="featuredblock">
                <img src="{{ featured_courses.left.creator.get_profile.get_pic_url }}"></img>
                <h3>{{ featured_courses.left.name }}</h3>
                <h5>By <a>{{ featured_courses.left.creator.first_name }} {{ featured_courses.left.creator.last_name }}</a>, {{ featured_courses.left.creator.get_profile.blurb }}</h5>
				<div class="content">
                    <img src="{% if featured_courses.left.photo %}{{ featured_courses.left.photo.url }}{% endif %}"></img>
                    <span>{{ featured_courses.left.description }}</span>
				</div>
			</div>
		</div>
		
		<div class="grid_4">

			<div class="featuredblock">
                <img src="{{ featured_courses.middle.creator.get_profile.get_pic_url }}"></img>
                <h3>{{ featured_courses.middle.name }}</h3>
                <h5>By <a>{{ featured_courses.middle.creator.first_name }} {{ featured_courses.middle.creator.last_name }}</a>, {{ featured_courses.middle.creator.get_profile.blurb }}</h5>
				<div class="content">
                    <img src="{% if featured_courses.middle.photo %}{{ featured_courses.middle.photo.url }}{% endif %}"></img>
                    <span>{{ featured_courses.middle.description }}</span>
				</div>
			</div>
		</div>
		
		<div class="grid_4">

			<div class="featuredblock">
                <img src="{{ featured_courses.right.creator.get_profile.get_pic_url }}"></img>
                <h3>{{ featured_courses.right.name }}</h3>
                <h5>By <a>{{ featured_courses.right.creator.first_name }} {{ featured_courses.right.creator.last_name }}</a>, {{ featured_courses.right.creator.get_profile.blurb }}</h5>
				<div class="content">
                    <img src="{% if featured_courses.right.photo %}{{ featured_courses.right.photo.url }}{% endif %}"></img>
                    <span>{{ featured_courses.right.description }}</span>
				</div>
			</div>
        </div>
			
			<div class="clear"></div>
			
			<div style="float:right; margin-top:25px;">
				<a href="/courses/browse/" id="learnmorelink" style="margin-right:0px;">Browse more courses&nbsp; &#8594;</a>
			</div>
			
		</div>
		
				
	</div> <!-- end container 6 -->
</div> <!-- end featured block -->



</div> <!-- end container -->


